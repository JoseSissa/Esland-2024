import { geti18n } from '@/i18n';
import Logo from './icons/Logo.astro';
const { currentLocale } = Astro
const i18n = geti18n({ currentLocale })
---

<section class="relative w-full h-dvh md:h-[80vh] xl:h-full">
    <!-- <img
        class="absolute top-10 left-0 right-0 w-[1000px] mx-auto z-10 animate-fade-in-up"
        src="/public/icons/logo-esland-home.svg" 
        alt={i18n.HERO_SUBTITLE}
    > -->
    <div class="absolute w-full h-full flex flex-col justify-center items-center gap-8 z-10 inset-0">
        <h1 class="flex items-center gap-5 text-4xl md:text-6xl lg:gap-20 lg:text-8xl font-tomaso">
            <span>E</span>
            <span>S</span>
            <span>L</span>
            <Logo class="w-auto h-9 md:h-[3.75rem] lg:h-24 scale-150" />
            <span>N</span>
            <span>D</span>
        </h1>
        <p class="px-4 text-xl lg:text-2xl text-center text-wrap font-jura subtitle">
            {i18n.HERO_SUBTITLE}
        </p>
    </div>
    <video 
        class="w-full h-auto animate-fade-in animate-duration-1000 animate-ease-in-out cv-p"
        src="/videos/video-logo.mp4"
        autoplay loop muted
    ></video>
    <video 
        class="absolute -bottom-48 blur-3xl -z-40 animate-fade-in animate-duration-1000 animate-ease-in-out"
        src="/videos/video-logo.mp4"
        autoplay loop muted
    ></video>
</section>

<style>
    @font-face {
        font-family: "Jura";
        font-style: normal;
        font-weight: 400;
        font-display: swap;
        src: url("/fonts/jura.woff2") format("woff2");
        unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA,
        U+02DC, U+0304, U+0308, U+0329, U+2000-206F, U+2074, U+20AC, U+2122,
        U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
    }

    .subtitle {
        text-shadow: 0 0 5px rgba(0, 0, 0, 0.5);
    }
</style>