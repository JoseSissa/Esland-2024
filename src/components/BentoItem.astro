---
interface Props {
    class?: string
    title: string
    subtitle?: string
}

const { title, subtitle } = Astro.props;
---

<article
    class={`
        ${Astro.props.class}
        relative
        border border-black/10 rounded-xl 
        backdrop-blur-md
        shadow-inner shadow-white/10
        overflow-hidden
        group
    `}
>
    <div class="absolute top-0 bottom-0 w-full h-full bg-gradient-to-b from-transparent from 50% via-black/50 to-black/80 z-10"></div>

    <slot name="image" />
    
    <div class="relative h-full flex flex-col justify-end gap-1 p-6 text-lg z-20 ">
        <h2
            class="mb-4 text-3xl font-semibold text-balance text-white">
            {title}
        </h2>
        {subtitle && 
            <h3
            class="text-3xl font-semibold text-sky-200/80 -mt-4 mb-4">
                {subtitle}
            </h3>
        }
        
        <slot name="content" />
    </div>
</article>